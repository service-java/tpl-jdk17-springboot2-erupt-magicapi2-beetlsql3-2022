package ${package};


import com.beetlsqlcodegen.demo.entity.${className};
import com.beetlsqlcodegen.demo.mapper.${className}Mapper;
import org.beetl.sql.core.page.DefaultPageRequest;
import org.beetl.sql.core.page.PageRequest;
import org.beetl.sql.core.page.PageResult;

import lombok.extern.java.Log;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import xyz.erupt.core.annotation.EruptRecordOperate;
import xyz.erupt.core.annotation.EruptRouter;
import xyz.erupt.core.constant.EruptRestPath;

@Log
@Controller
@RequestMapping(EruptRestPath.ERUPT_API + "/${lowerFirst(className)}")
public class ${className}Controller {

    @Autowired
    private ${className}Mapper ${lowerFirst(className)}Mapper;

    @GetMapping("/page${className}")
    @ResponseBody
    // @EruptRecordOperate("登录可调用")
    // @EruptRouter(verifyType = EruptRouter.VerifyType.LOGIN, authIndex = 0)
    public PageResult<${className}> page${className}(Integer pageNumber, Integer pageSize) {
        return ${lowerFirst(className)}Mapper.page${className}Cols(DefaultPageRequest.of(pageNumber, pageSize), ${className}._cols);
    }

}